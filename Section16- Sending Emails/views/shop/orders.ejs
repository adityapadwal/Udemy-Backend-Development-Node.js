<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order ID - # <%= order._id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(product => { %>
                                    <li class="orders__products-item"><b>Product Name:</b> <%= product.product.title %> <br/> <b>Product Price:</b> <%= product.product.price %> <br/> <b>Quantity: </b>(<%= product.quantity %>)</li>
                                <% }); %>
                            </ul>
                            <h1>Grand Total: 
                                <!-- To Do -->
                            </h1>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>